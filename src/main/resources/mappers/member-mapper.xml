<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="memberMapper">
   
   <resultMap id="memberResultSet" type="Member">
      <id property="mid" column="MID"/>
      <result property="id" column="ID"/>
      <result property="pwd" column="PWD"/>
      <result property="name" column="NAME"/>
      <result property="nick" column="NICK"/>
      <result property="birthday" column="BIRTHDAY"/>
      <result property="gender" column="GENDER"/>
      <result property="phone" column="PHONE"/>
      <result property="email" column="EMAIL"/>
      <result property="address" column="ADDRESS"/>
      <result property="join_date" column="JOIN_DATE"/>
      <result property="enroll_date" column="ENROLL_DATE"/>
      <result property="user_now" column="USER_NOW"/>
      <result property="user_lv" column="USER_LV"/>
      <result property="etc" column="ETC"/>
   </resultMap>

   <select id="idCheck" parameterType="string" resultType="_int">
      SELECT
         COUNT(*)
      FROM MEMBER
      WHERE ID = #{ id }
   </select>

 
   <!-- 회원 정보 조회-->
   <select id="selectMember" parameterType="Member" resultMap="memberResultSet">
      SELECT * FROM MEMBER
      WHERE MID = #{ mid }
   </select>
   

    <select id="selectAll" resultMap="memberResultSet">
      select * from member
      order by join_date desc
    </select>

   <select id="loginMember" parameterType="Member" resultMap="memberResultSet">
      <!-- 암호화 전 -->
      <!-- SELECT
             *
        FROM MEMBER
       WHERE ID = #{ id }
         AND PWD = #{ pwd }
         AND MSTATUS='Y'  -->
      <!-- 암호화 후 -->
      SELECT
            *
         FROM MEMBER
        WHERE MID = #{ mid }
          AND USER_NOW = 'Y'
   </select>

   <insert id="insertMember" parameterType="Member">
      INSERT 
        INTO MEMBER
      VALUES ( 
              seq_mid.nextval
             , #{ id }
             , #{ pwd }
             , #{ name }
             , #{ nick }
             , #{ birthday }
             , #{ gender }
             , #{ phone }
             , #{ email }
             , #{ address }
             , sysdate
             , sysdate
             , default
             , default
             , null
                )
   </insert>


<!-- 
	조회수 top3 게시글 리스팅
   <select id="selectTop3" resultMap="memberResultSet">
    <![CDATA[
      SELECT *
        FROM (
      SELECT  ROWNUM RNUM
            , ID
            , NICKNAME
            , PROPIC
            , GRADE
        FROM (
      SELECT *
        FROM MEMBER 
       ORDER BY GRADE DESC
              ))
       WHERE RNUM >= 1 
         AND RNUM <= 5
            ]]>
   </select> -->
	

   
   <update id="deleteMember" parameterType="Member">
      UPDATE
             MEMBER
         SET MSTATUS='N'
       WHERE ID = #{ id }
   </update>
  
   <!-- 회원 정보 수정 -->
	<update id="updateMember" parameterType="Member">
		UPDATE 
		       MEMBER
		   SET 
		       PWD = #{ pwd },
		       NICKNAME = #{ nickname },
		       EMAIL = #{ email },
		       SEX = #{ sex },
		       PHONE = #{ phone },
		       ADDRESS = #{ address },
		       UPDATEDATE = SYSDATE,
		       SELFINTRO_HEAD = #{ selfintro_head },
		       SELFINTRO_CONTENT = #{ selfintro_content },
		       PROPIC = #{ propic }
		 WHERE ID = #{ id }  
	</update>
   
   <!-- 아이디 찾기 -->
   <select id="findId" parameterType="Member" resultMap="memberResultSet">
      SELECT
             *
        FROM MEMBER
       WHERE NAME = #{ name }
         AND EMAIL = #{ email }
   </select>
   
   <!-- 비밀번호 찾기 -->
   <select id="findPw" parameterType="Member" resultMap="memberResultSet">
      SELECT
             *
        FROM MEMBER
       WHERE ID = #{ id }
         AND EMAIL = #{ email }
   </select>
   
   <!-- 비밀번호 재설정 -->
   <update id="setTempPw" parameterType="Member">
      update member set pwd = #{ pwd } where id = #{ id }
   </update>
   
  
</mapper>